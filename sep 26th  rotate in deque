import java.util.*;

class Solution {
    public static void rotateDeque(Deque<Integer> dq, int type, int k) {
        int n = dq.size();
        if (n == 0) return;
        
        k = k % n;  // handle k > n
        
        if (type == 1) {  

            // Right rotation
            for (int i = 0; i < k; i++) {
                int last = dq.pollLast();  // remove from end
                dq.addFirst(last);         // insert at front
            }
        } 
        else if (type == 2) {  
            // Left rotation
            for (int i = 0; i < k; i++) {
                int first = dq.pollFirst(); // remove from front
                dq.addLast(first);          // insert at end
            }
        }
    }
}

// rotate in deque
