class Solution {
    public int countPS(String s) {
        int n = s.length();
        int count = 0;

        // Odd length palindromes
        for (int center = 0; center < n; center++) {
            count += expandFromCenter(s, center, center);
        }

        // Even length palindromes
        for (int center = 0; center < n - 1; center++) {
            count += expandFromCenter(s, center, center + 1);
        }

        return count;
    }

    private int expandFromCenter(String s, int left, int right) {
        int cnt = 0;
        while (left >= 0 && right < s.length() && s.charAt(left) == s.charAt(right)) {
            if (right - left + 1 >= 2) { // length â‰¥ 2
                cnt++;
            }
            left--;
            right++;
        }
        return cnt;
    }
}


// actually its a method of finding palindrom posibles in a string and which is quiet efficient by using even and odd loops;
