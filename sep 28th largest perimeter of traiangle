class Solution {
    public int largestPerimeter(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        int sol =0;
        for(int i=n-1;i>=2;i--){
            if(nums[i-2]+nums[i-1]>nums[i]){
                return sol+= nums[i-2]+nums[i-1]+nums[i];
            }
        }
        return sol;
        
    }
}

//largest perimeter of traiangle;
